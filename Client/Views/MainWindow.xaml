<Window x:Class="Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Background="#402F2B">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Лівий блок (Профіль) -->
        <Border Height="500" Background="#5C3737" CornerRadius="10" Padding="20" Grid.Column="0">
            <StackPanel>
                <Ellipse Width="50" Height="50" Fill="#A95555"/>
                <TextBlock Text="User Name" FontWeight="Bold" Margin="0,10,0,0" Foreground="White"/>
                <TextBlock Text="@nickname" Foreground="Gray"/>
                <TextBlock Text="Description:" Margin="0,10,0,0" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Text, text, text, text, text, text..." TextWrapping="Wrap" FontSize="12" Foreground="#AFACAC"/>
                <Button Content="Settings" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Центральний блок (Пости + Пошук) -->
        <StackPanel Grid.Column="1" Margin="20,10">
            <!-- Пошук -->
            <Border Width="300" Height="50" Background="#D9D9D9" Margin="0,0,0,20" HorizontalAlignment="Center" CornerRadius="20" >
                <TextBox  
                    Margin="6" Background="#D9D9D9"
                         VerticalContentAlignment="Center" FontSize="14" Text="Search..." 
                         BorderThickness="0" Padding="10" />
            </Border>

            <!-- Пости -->
            <StackPanel>
                <ListBox ItemsSource="{Binding Posts}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         Margin="0"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Width="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#D9D9D9" CornerRadius="10" Padding="10" Margin="0,20,0,10" MinWidth="400" MaxWidth="600">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>  
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>

        <!-- Правий блок (Сповіщення) -->
        <StackPanel Height="500" Grid.Column="2" Margin="20,0,0,0">
            <Border Background="#D9D9D9" CornerRadius="20" Padding="10" Margin="0,0,0,10">
                <TextBlock Text="Notifications" TextAlignment="Center" FontWeight="Bold"/>
            </Border>

            <!-- Сповіщення -->
            <Border Background="#D9D9D9" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <TextBlock>
                    <Run Text="Bob is now following you"/>
                </TextBlock>
            </Border>
            <Border Background="#D9D9D9" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <TextBlock>
                    <Run Text="Maria is now following you"/>
                </TextBlock>
            </Border>
            <Border Background="#D9D9D9" CornerRadius="10" Padding="10">
                <TextBlock>
                    <Run Text="Maria wrote you a new comment"/>
                </TextBlock>
            </Border>
        </StackPanel>
        <!-- Нижнє меню -->
        <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.ColumnSpan="3" Grid.Column="0"
                   Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal"> <!-- Spacing="20" -->
                <Button Width="50" Height="50" Margin="0,0,5,0" Background="#D9D9D9" Content="≡"/> <!-- CornerRadius="15" -->
                <Button Width="50" Height="50" Margin="0,0,5,0" Background="#D9D9D9" Content="🏠"/>
                <Button Width="50" Height="50" Margin="0,0,0,0" Background="#D9D9D9" Content="+"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
