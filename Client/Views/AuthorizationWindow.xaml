<Window x:Class="Client.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="Sign In"
        Height="550" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        FontFamily="Segoe UI">
     <Grid Margin="20">
        <!-- Header -->
        <StackPanel Margin="0,60,0,10" VerticalAlignment="Top">
            <TextBlock Text="Welcome Back" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="#111111"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Sign in to continue"
                       FontSize="14"
                       Foreground="#888"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="Email"
                       FontSize="14"
                       Margin="0,50,0,5"/>
            <Border Background="#F0F0F0" 
                    CornerRadius="12" 
                    Padding="12" 
                    Margin="0,0,0,10"
                    BorderBrush="#DDD"
                    BorderThickness="1">
                <TextBox x:Name="EmailField" 
                         Background="Transparent" 
                         BorderThickness="0"
                         FontSize="14"/>
            </Border>

            <!-- Password -->
            <TextBlock Text="Password"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <Border Background="#F0F0F0" 
                    CornerRadius="12" 
                    Padding="12" 
                    BorderBrush="#DDD"
                    BorderThickness="1">
                <PasswordBox x:Name="PasswordField"
                             Background="Transparent"
                             FontSize="14"
                             BorderThickness="0"
                             Tag="Password"/>
            </Border>

            <!-- Forgot Password -->
            <TextBlock Text="Forgot password?" 
                       Foreground="#007AFF" 
                       FontSize="12" 
                       HorizontalAlignment="Right"
                       Margin="4,4,4,0"
                       Cursor="Hand"/>
        </StackPanel>

        <!-- Input Fields -->
        <StackPanel VerticalAlignment="Center" Margin="0,50,0,0"> <!-- Spacing="12" -->
            <!-- Email -->
            
        </StackPanel>

        <!-- Login Button -->
        <Button Content="Sign In"
                Click="SignInButtonClick"
                Background="#007AFF"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                BorderBrush="Transparent"
                BorderThickness="0"
                Padding="14"
                Margin="0,360,0,0"
                Height="50"
                Cursor="Hand"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                /> <!-- CornerRadius="14" -->

        <!-- Bottom Link -->
        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Donâ€™t have an account? " FontSize="12"/>
            <TextBlock Text="Sign up" FontSize="12" Foreground="#007AFF" Cursor="Hand" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
